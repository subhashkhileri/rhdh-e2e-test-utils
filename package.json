{
  "name": "rhdh-e2e-test-utils",
  "version": "1.0.0",
  "description": "Test utilities for RHDH E2E tests",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./eslint": {
      "types": "./dist/eslint/base.config.d.ts",
      "default": "./dist/eslint/base.config.js"
    },
    "./playwright-config": {
      "types": "./dist/playwright/base-config.d.ts",
      "default": "./dist/playwright/base-config.js"
    },
    "./tsconfig": "./tsconfig.base.json"
  },
  "files": [
    "dist",
    "tsconfig.base.json"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "check": "npm run typecheck && npm run lint:check && npm run prettier:check",
    "clean": "rm -rf dist",
    "lint:check": "eslint . --ignore-pattern dist",
    "lint:fix": "eslint . --fix --ignore-pattern dist",
    "prepublishOnly": "npm run build",
    "prettier:check": "prettier --check . '!dist'",
    "prettier:fix": "prettier --write . '!dist'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "e2e",
    "playwright",
    "rhdh",
    "test-utils"
  ],
  "engines": {
    "node": ">=22",
    "npm": ">=11"
  },
  "peerDependencies": {
    "@playwright/test": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1"
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.28.0",
    "eslint-plugin-check-file": "^3.2.0",
    "eslint-plugin-playwright": "^2.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.33.0"
  }
}
