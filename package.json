{
  "name": "rhdh-e2e-test-utils",
  "version": "1.0.0",
  "description": "Test utilities for RHDH E2E tests",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/base-config.d.ts",
      "default": "./dist/eslint/base-config.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "default": "./dist/fixtures/index.js"
    },
    "./global-setup": {
      "types": "./dist/global-setup.d.ts",
      "default": "./dist/global-setup.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "default": "./dist/helpers/index.js"
    },
    "./playwright-config": {
      "types": "./dist/playwright-config/base-config.d.ts",
      "default": "./dist/playwright-config/base-config.js"
    },
    "./tsconfig": "./tsconfig.base.json",
    "./ui-helper": {
      "types": "./dist/helpers/ui-helper.d.ts",
      "default": "./dist/helpers/ui-helper.js"
    },
    "./rhdh-deployment": {
      "types": "./dist/rhdh-deployment/index.d.ts",
      "default": "./dist/rhdh-deployment/index.js"
    }
  },
  "files": [
    "dist",
    "tsconfig.base.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "keywords": [
    "e2e",
    "playwright",
    "rhdh",
    "test-utils"
  ],
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "@playwright/test": "^1.56.1",
    "zx": "^8.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/lodash.mergewith": "^4.6.9",
    "@types/node": "^24.10.1",
    "eslint": "^9.28.0",
    "eslint-plugin-check-file": "^3.2.0",
    "eslint-plugin-playwright": "^2.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "fs-extra": "^11.3.2",
    "lodash.mergewith": "^4.6.2"
  }
}
